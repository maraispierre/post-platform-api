// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Author {
  email String  @unique
  password  String
  posts Post[]
}

model Post {
  id        Int      @default(autoincrement()) @id
  content   String
  author    Author    @relation(fields: [authorId], references: [email])
  authorId  String
}
